body {
    font-family: Arial, sans-serif;
    background-color: #ffffff;
    color: #007bff;
    margin: 0;
    padding: 0;
}

/* Tabs styles */
#tabs {
    display: flex;
    justify-content: center;
    margin: 20px 0;
}

.tab-button {
    background-color: #007bff;
    color: white;
    border: none;
    padding: 10px 20px;
    margin: 0 5px;
    cursor: pointer;
    border-radius: 5px 5px 0 0;
    font-size: 16px;
    transition: background-color 0.3s ease;
}

.tab-button:hover {
    background-color: #0056b3;
}

.tab-button.active {
    background-color: white;
    color: #007bff;
    border-bottom: 2px solid white;
    cursor: default;
}

.tab-content {
    display: none;
}

.tab-content.active {
    display: block;
}
